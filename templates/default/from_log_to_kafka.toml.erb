[<%=@topic%>-input-log]
type = "LogstreamerInput"
log_directory = "<%=@log_directory%>"
file_match = "<%=@file_match%>"

[<%=@topic%>-output-kafka]
type = "KafkaOutput"
message_matcher = "Logger == '<%=@topic%>-input-log'"
topic = "<%=@topic%>"
addrs = <%=@kafka_hosts%>
encoder = "PayloadEncoder"

[PayloadEncoder]
append_newlines = false